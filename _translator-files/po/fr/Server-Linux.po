msgid ""
"~~~\n"
"jamulus --nogui --server \\\n"
"        --directoryserver genreServer:port \\\n"
"        --serverinfo \"yourServerName;yourCity;[country ID]\"\n"
"~~~\n"
msgstr ""
"~~~\n"
"Jamulus --nogui --server \\\n"
"        --directoryserver genreServer:port \\\n"
"        --serverinfo \"yourServerName;yourCity;[country ID]\"\n"
